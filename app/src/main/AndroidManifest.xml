<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abolt.guesstheday">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Calendar Quiz"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuessTheDay">
        <activity android:name=".Quiz_end"></activity>
        <activity android:name=".Rules_Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Quiz_Activity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            android:screenOrientation="portrait"
        </activity>
    </application>

</manifest>